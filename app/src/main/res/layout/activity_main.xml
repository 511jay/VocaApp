<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대충 센스있어 보이는 이름"
            android:textSize="32dp"
            android:layout_marginTop="150dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5mm">


            <Button
                android:id="@+id/wordListB"
                android:layout_width="15mm"
                android:layout_height="15mm"
                android:layout_marginRight="5mm"
                android:text="내 단어장" />

            <Button
                android:id="@+id/Do_TestB"
                android:layout_width="15mm"
                android:layout_height="15mm"
                android:text="시험보기" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/listmodeB"
                android:layout_width="15mm"
                android:layout_height="15mm"
                android:layout_marginRight="5mm"
                android:text="단어장\n편집" />

            <Button
                android:id="@+id/wordmodeB"
                android:layout_width="15mm"
                android:layout_height="15mm"
                android:text="단어 편집" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>